<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sourav.imageprocessingtry.OthersActivity">
    <LinearLayout
        android:id="@+id/linearOthers2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">


        <Button
            android:id="@+id/tint4"
            android:padding="0dp"
            android:text="4"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setTint4"/>

        <Button
        android:id="@+id/tint5"
        android:padding="0dp"
        android:text="sp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="setSweetPurple"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearOthers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@id/linearOthers2">
        <Button
            android:id="@+id/tint1"
            android:padding="0dp"
            android:text="1"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setTint1"/>


        <Button
            android:id="@+id/tint2"
            android:padding="0dp"
            android:text="2"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setTint2"/>

        <Button
            android:id="@+id/tint3"
            android:padding="0dp"
            android:text="3"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setTint3"/>



    </LinearLayout>

    <ImageView
        android:id="@+id/image2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/linearOthers"
        />
</RelativeLayout>
